
public class ClientProgram {
	LoginForm lf = new LoginForm();
	ChatForm  cf = new ChatForm();
	
	public ClientProgram() {
		openLF();
		openCF();
	}
	
	public void openLF() {
		this.lf.setVisible(true);
	}
	
	public void openCF() {
		cf.setVisible(true);
		cf.startClient();
	}
	
	public ChatForm getCF() {
		return cf;
	}
	
	public LoginForm getLF() {
		return lf;
	}
}
